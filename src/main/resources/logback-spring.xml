<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOGS" value="logs"/>


    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %magenta(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator class="springboot.web.downloader.utils.ThreadNameBasedDiscriminator"/>
        <sift>
            <appender name="SIFT" class="ch.qos.logback.core.FileAppender">
                <file>${LOGS}/${threadName}.log</file>
                <layout class="ch.qos.logback.classic.PatternLayout">
                    <pattern>%d %p %C{1} [%t] %m%n</pattern>
                </layout>
            </appender>
        </sift>
    </appender>

    <root level="INFO">
        <appender-ref ref="SIFT" />
        <appender-ref ref="Console" />
    </root>

</configuration>
